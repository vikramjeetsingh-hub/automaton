{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node", "vitest"],
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": [
    "src/node.main.ts",
    "src/node/**/*",
    "test/**/*"
  ]
}
